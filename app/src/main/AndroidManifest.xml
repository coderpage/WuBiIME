<?xml version="1.0" encoding="utf-8"?>

<manifest
    package="com.coderpage.wubinput"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".MApplication"
        android:icon="@drawable/icon"
        android:label="@string/ime_name"
        android:theme="@style/AppTheme">
        <service
            android:name="com.coderpage.wubinput.IME"
            android:label="@string/ime_name"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod"/>
            </intent-filter>

            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method"/>
        </service>

        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/ime_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity
            android:name="com.coderpage.wubinput.ImePreferenceActivity"
            android:label="@string/ime_name">
        </activity>

        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test"
            android:parentActivityName=".ImePreferenceActivity">

        </activity>

        <activity
            android:name=".view.activity.PracticeInputActivity"
            android:label="@string/title_activity_practice">

            <intent-filter>
                <action android:name="com.coderpage.intent.action.practiceActivity"/>
            </intent-filter>

        </activity>

        <activity android:name=".view.activity.TestInputActivity">
            
        </activity>

    </application>

</manifest>
